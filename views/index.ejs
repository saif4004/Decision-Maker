  <h1> Decision Maker </h1>
  <section>
    <form id="poll_form" method="POST" action="/polls/create_poll">
      <div id="options">
        <h2>Email</h2>
        <input type="email" name="email" id="email" placeholder="Enter your email" required>
        <h2>Question</h2>
        <input type="text" name="question" id="question" placeholder="Enter question" required>
        <h2>Options</h2>

        <label>Option 1:</label>
        <input type="text" name="titles[]" placeholder="Title" required>
        <textarea name="descriptions[]" placeholder="Description (optional)"></textarea>
        <label>Option 2:</label>
        <input type="text" name="titles[]" placeholder="Title" required>
        <textarea name="descriptions[]" placeholder="Description (optional)"></textarea>
        <label>Option 3:</label>
        <input type="text" name="titles[]" placeholder="Title" required>
        <textarea name="descriptions[]" placeholder="Description (optional)"></textarea>
      </div>
      <button type="button" class="add-option-btn">Add option</button>
      <button type="submit">Create Poll</button>
    </form>
  </section>
</body>
</html>
